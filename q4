#include <stdio.h>
#include <stdlib.h>

int main() {
    // Create pointers
    char *professor;
    int *student_ids, *grades;

    // Allocate 256 characters for the professor pointer using calloc
    professor = (char *)calloc(256, sizeof(char));

    // Check if memory allocation was successful
    if (professor == NULL) {
        perror("Error allocating memory for professor");
        return 1; // Return error code
    }

    // Prompt the professor for their name
    printf("Enter professor's name: ");
    scanf("%255s", professor);

    // Prompt the professor for the number of students to mark
    int num_students;
    printf("Enter the number of students to mark: ");
    scanf("%d", &num_students);

    // Allocate memory for student_ids and grades using malloc
    student_ids = (int *)malloc(num_students * sizeof(int));
    grades = (int *)malloc(num_students * sizeof(int));

    // Check if memory allocation was successful
    if (student_ids == NULL || grades == NULL) {
        perror("Error allocating memory for student_ids or grades");
        // Free previously allocated memory
        free(professor);
        return 1; // Return error code
    }

    // Store the number of students to mark
    // (This step is optional as we already have 'num_students')
    int *num_students_ptr = &num_students;

    // Free allocated memory before terminating
    free(professor);
    free(student_ids);
    free(grades);

    return 0; // Return success code
}
